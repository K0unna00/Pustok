@model List<Genre>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <a asp-action="create" class="btn btn-primary">Create</a>
        </div>
        <div class="col-md-10 mx-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Books count</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var auth in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@auth.Name</td>
                            <td>@auth.Books.Count()</td>
                            <td>
                                <a asp-action="edit" asp-route-id="@auth.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="delete" asp-route-id="@auth.Id" class="btn btn-danger sweet-delete">Sweet delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center d-flex justify-content-center mt-5">
                <nav >
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        @for (int i=1 ; i< ViewBag.PageCount+1;i++)
                        {
                            <li class="page-item"><a class="page-link" asp-action="index" asp-controller="Genre" asp-route-page="@i">@i</a></li>
                        }
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

